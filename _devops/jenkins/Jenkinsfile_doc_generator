pipeline {
  agent any

  environment {
    SSH_KEY_PATH = credentials('ssh-key-hirovo') // Jenkins içinde SSH key tanımlı olmalı
  }

  stages {
    stage('Prepare Web/Mobile Context') {
      steps {
        sh '''
          mkdir -p ./_devops/tmp/webapp
          mkdir -p ./_devops/tmp/mobileapp
          cp -r /maden/maden-frontend/common ./_devops/tmp/webapp/
          cp -r /maden/mobileapp/common ./_devops/tmp/mobileapp/
        '''
      }
    }

    stage('API Documentation Generator') {
      steps {
        withCredentials([file(credentialsId: 'ssh-key-hirovo', variable: 'SSH_KEY_PATH')]) {
          sh '''
            mkdir -p _devops/ssh
            cp $SSH_KEY_PATH _devops/ssh/id_rsa_mobileapp
            chmod 600 _devops/ssh/id_rsa_mobileapp

            docker build -t registry.git.hirovo.com.tr/arfblocks-cli:$BUILD_NUMBER --build-arg git_username=mstfa6060 --build-arg git_password=xxx -f _devops/docker/Dockerfile-api-doc-generator .
          '''
        }
      }
    }

    stage('Push ArfBlocks Docs to Frontend & Mobile') {
      steps {
        withCredentials([file(credentialsId: 'ssh-key-hirovo', variable: 'SSH_KEY_PATH')]) {
          sh '''
            export GIT_SSH_COMMAND="ssh -i $SSH_KEY_PATH -o StrictHostKeyChecking=no"

            cd _devops/tmp/webapp
            git init
            git remote add origin git@github.com:mstfa6060/maden-frontend.git
            git checkout -B main
            git config user.name "CI/CD-BOT"
            git config user.email "bot@hirovo.com"
            git add .
            git commit -m "ArfBlocks CLI Webapp Docs Update" || echo "⚠️ No changes to commit for webapp"
            git push origin main || echo "⚠️ No push needed for webapp"

            cd ../mobileapp
            git init
            git remote add origin git@github.com:mstfa6060/mobileapp.git
            git checkout -B main
            git config user.name "CI/CD-BOT"
            git config user.email "bot@hirovo.com"
            git add .
            git commit -m "ArfBlocks CLI Mobileapp Docs Update" || echo "⚠️ No changes to commit for mobileapp"
            git push origin main || echo "⚠️ No push needed for mobileapp"
          '''
        }
      }
    }

    stage('Send Success Message') {
      steps {
        echo '✅ Hirovo API Docs Pipeline Success'
      }
    }
  }

  post {
    always {
      echo '⏹ Pipeline Completed'
    }
  }
}
