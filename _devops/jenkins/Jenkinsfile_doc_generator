pipeline {
  agent any
  environment {
    SSH_KEY_PATH = credentials('ssh-key-maden')
  }

  stages {
    stage('Hazırlık - Web/Mobile klasörlerini oluştur') {
      steps {
        sh '''
          mkdir -p ./_devops/tmp/webapp
          mkdir -p ./_devops/tmp/mobileapp
          cp -r /maden/maden-frontend/common ./_devops/tmp/webapp/
          cp -r /maden/mobileapp/common ./_devops/tmp/mobileapp/
        '''
      }
    }

    stage('Docker Image Build - Docs Generator') {
      steps {
        withCredentials([file(credentialsId: 'ssh-key-maden', variable: 'SSH_KEY_PATH')]) {
          sh '''
            mkdir -p _devops/ssh
            cp $SSH_KEY_PATH _devops/ssh/id_rsa_mobileapp
            chmod 600 _devops/ssh/id_rsa_mobileapp

            docker build -t registry.git.hirovo.com.tr/arfblocks-cli:${BUILD_NUMBER}-${GIT_COMMIT:0:7} \
              --build-arg git_username=mstfaock \
              --build-arg git_password=${GIT_PASSWORD} \
              -f _devops/docker/Dockerfile-api-doc-generator .
          '''
        }
      }
    }

    stage('ArfBlocks CLI Dokümantasyonu Oluştur') {
      steps {
        sh '''
          docker run --rm \
            -v $(pwd):/maden/backend \
            registry.git.hirovo.com.tr/arfblocks-cli:${BUILD_NUMBER}-${GIT_COMMIT:0:7} \
            arfblocks-cli exec --file /maden/backend/_devops/arfblocks-cli/hirovo.arfblocks-cli.json

          docker run --rm \
            -v $(pwd):/maden/backend \
            registry.git.hirovo.com.tr/arfblocks-cli:${BUILD_NUMBER}-${GIT_COMMIT:0:7} \
            arfblocks-cli exec --file /maden/backend/_devops/arfblocks-cli/iam.arfblocks-cli.json
        '''
      }
    }

    stage('Error Code Exporter') {
      steps {
        sh '''
          docker run --rm \
            -v $(pwd):/maden/backend \
            registry.git.hirovo.com.tr/arfblocks-cli:${BUILD_NUMBER}-${GIT_COMMIT:0:7} \
            dotnet run --project /maden/backend/Jobs/SpecialPurpose/DevTasks/ErrorCodeExporter/ErrorCodeExporter.csproj || true
        '''
      }
    }

    stage('Push ArfBlocks Dokümantasyonları') {
      steps {
        withCredentials([sshUserPrivateKey(credentialsId: 'ssh-key-maden', keyFileVariable: 'KEY')]) {
          sh '''
            export GIT_SSH_COMMAND="ssh -i $KEY -o StrictHostKeyChecking=no"

            cd _devops/tmp/webapp
            git init
            git remote remove origin || true
            git remote add origin git@github.com:mstfa6060/maden-frontend.git
            git checkout -B main
            git config user.name "CI/CD-BOT"
            git config user.email "bot@hirovo.com"
            git add .
            git commit -m "ArfBlocks Web Dokümantasyon Güncellemesi [ci skip]" || true
            git push -f origin main

            cd ../mobileapp
            git init
            git remote remove origin || true
            git remote add origin git@github.com:mstfa6060/mobileapp.git
            git checkout -B main
            git config user.name "CI/CD-BOT"
            git config user.email "bot@hirovo.com"
            git add .
            git commit -m "ArfBlocks Mobil Dokümantasyon Güncellemesi [ci skip]" || true
            git push -f origin main
          '''
        }
      }
    }
  }

  post {
    always {
      echo "⏹ Pipeline Completed"
    }
    success {
      echo "✅ Jenkinsfile_doc_generator başarıyla tamamlandı."
    }
    failure {
      echo "❌ Jenkinsfile_doc_generator başarısız oldu."
    }
  }
}
