pipeline {
    agent any

    environment {
        DOTNET_ROOT = "/usr/share/dotnet"
        PATH = "/usr/share/dotnet:${env.PATH}"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/mstfa6060/Hirovo.git'
            }
        }

        stage('Generate Error Messages') {
            steps {
                sh 'dotnet run --project Jobs/SpecialPurpose/DevTasks/ErrorCodeExporter/'
            }
        }

        stage('Generate API Docs - Workers') {
            steps {
                sh 'arfblocks-cli exec --file _devops/arfblocks-cli/hirovo.arfblocks-cli.json'
            }
        }

        stage('Generate API Docs - IAM') {
            steps {
                sh 'arfblocks-cli exec --file _devops/arfblocks-cli/iam.arfblocks-cli.json'
            }
        }

        stage('Build Docker Images') {
            steps {
                dir('_devops/docker') {
                    sh 'docker-compose build'
                }
            }
        }

        stage('Deploy Containers') {
            steps {
                dir('_devops/docker') {
                    sh 'docker-compose up -d'
                }
            }
        }
    }

    post {
        success {
            echo "✅ Deployment success!"
        }
        failure {
            echo "❌ Deployment failed!"
        }
    }
}
